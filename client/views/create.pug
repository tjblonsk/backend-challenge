h1 Create Order

body
  form(action='', method='POST')
    for type in pizzaTypes
      label Pizza Type
      p=type.name
      input(name='type', type='text', value=type.name, hidden=true)
      br
      label Price
      p= type.price
      label Qty
      select
        option(value='0', selected= true) -- Select --
        for num in [1,2,3,4,5]
          option(value=num, name='orderItems[qty]')= num
    hr
    input(type='submit')
